generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  uuid      String    @default(uuid())
  name      String
  userName  String    @unique @map("user_name")
  login     String
  email     String    @unique
  createdAt DateTime  @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")
  Address   Address[]

  @@map("users")
}

model Category {
  id          Int       @id @default(autoincrement())
  uuid        String    @default(uuid())
  description String
  slug        String
  createdAt   DateTime  @default(now()) @map("created_at")
  deletedAt   DateTime? @map("deleted_at")

  @@map("categories")
}

model Address {
  id   Int    @id @default(autoincrement())
  uuid String @default(uuid())

  user    User @relation(fields: [user_id], references: [id])
  user_id Int

  street    String
  city      String
  district  String
  state     String
  number    String?
  zipcode   String
  latitude  String
  longitude String
  createdAt DateTime  @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("adresses")
}
